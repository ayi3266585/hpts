<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_lightgray"
    tools:context="com.queqianme.hpt.ui.activity.CertificationPersionActivity">

    <com.queqianme.hpt.view.TitleBackView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88" />

    <TextView
        android:id="@+id/title"
        style="@style/title_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x88"
        android:text="个人认证" />

    <LinearLayout
        android:id="@+id/persion_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/x20"
        android:background="@color/text_write"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_lightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:gravity="center_vertical">

            <TextView
                style="@style/did_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="姓名" />

            <EditText
                style="@style/did_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="真实姓名" />
            <ImageView
                android:layout_width="@dimen/x44"
                android:src="@mipmap/delete_icon"
                android:layout_marginRight="@dimen/x20"
                android:layout_height="@dimen/x44" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/line_lightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:gravity="center_vertical">

            <TextView
                style="@style/did_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="身份证" />

            <EditText
                style="@style/did_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="18位身份证号" />
            <ImageView
                android:layout_width="@dimen/x44"
                android:src="@mipmap/delete_icon"
                android:layout_marginRight="@dimen/x20"
                android:layout_height="@dimen/x44" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/line_lightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:gravity="center_vertical">

            <TextView
                style="@style/did_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="手机号" />

            <EditText
                style="@style/did_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="联系手机号" />
            <ImageView
                android:layout_width="@dimen/x44"
                android:src="@mipmap/delete_icon"
                android:layout_marginRight="@dimen/x20"
                android:layout_height="@dimen/x44" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_lightgray" />
    </LinearLayout>


    <Button
        android:id="@+id/submit"
        style="@style/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:layout_below="@id/persion_ll1"
        android:layout_marginTop="@dimen/x30"
        android:text="确认提交" />


</RelativeLayout>
