<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_lightgray">

    <TextView
        android:id="@+id/title"
        style="@style/title_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:background="@color/base_somber"
        android:gravity="center"
        android:text="首页" />

    <!--自定义圆环进度条-->
    <com.queqianme.hpt.view.PrograssView
        android:id="@+id/first_prograssview"
        android:layout_width="@dimen/x455"
        android:layout_height="@dimen/x455"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true" />


    <com.ab.view.sliding.AbSlidingPlayView
        android:id="@+id/frist_ad"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x226"/>

</RelativeLayout>