<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">

    <FrameLayout
        android:id="@+id/main_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_lightgray" />


    <RadioGroup
        android:id="@+id/main_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/x10">

        <RadioButton
            android:id="@+id/main_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/main_navigation_first_btn"
            android:gravity="center"
            android:text="投资"
            android:textColor="@drawable/main_navigation_btn_text_color"
            android:textSize="@dimen/font_12" />

        <RadioButton
            android:id="@+id/main_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_navigation_second_btn"
            android:gravity="center"
            android:text="聊天"
            android:textColor="@drawable/main_navigation_btn_text_color"
            android:textSize="@dimen/font_12" />

        <RadioButton
            android:id="@+id/main_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/main_navigation_third_btn"
            android:gravity="center"
            android:text="个人"
            android:textColor="@drawable/main_navigation_btn_text_color"
            android:textSize="@dimen/font_12" />
    </RadioGroup>

</LinearLayout>
