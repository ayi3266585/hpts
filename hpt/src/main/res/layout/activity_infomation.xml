<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hpt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_lightgray"
    tools:context="com.queqianme.hpt.ui.activity.InfomationActivity">

    <com.queqianme.hpt.view.TitleBackView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        hpt:titleText="个人资料" />


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/x20"
        android:paddingTop="@dimen/x20">

        <com.queqianme.hpt.view.CircleImageView
            android:id="@+id/infomation_head"
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/x140"
            hpt:civ_border_color="@color/black"
            hpt:civ_border_width="1dp"
            android:layout_marginLeft="@dimen/x30"
            android:src="@mipmap/head_icon140" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            style="@style/text_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改头像" />

        <ImageView
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/x44"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout1"
        android:layout_marginTop="@dimen/x20"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/x20"
        android:paddingTop="@dimen/x20">

        <TextView
            style="@style/text_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="昵称" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/nick_name"
            style="@style/text_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称长度为10个汉字" />

        <ImageView
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/x44"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout2"
        android:layout_marginTop="@dimen/x5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/x20"
        android:paddingTop="@dimen/x20">

        <TextView
            style="@style/text_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="手机号" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/login_phone"
            style="@style/text_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="158*****678" />

        <ImageView
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/x44"
            android:layout_marginRight="@dimen/x30" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout3"
        android:layout_marginTop="@dimen/x5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/x20"
        android:paddingTop="@dimen/x20">

        <TextView
            style="@style/text_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="修改登录密码" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            style="@style/text_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/x44"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/arrow_right" />
    </LinearLayout>

    <Button
        android:id="@+id/login_out_btn"
        android:text="退出当前账号"
        style="@style/submit_bg"
        android:layout_below="@id/linearLayout4"
        android:layout_marginTop="@dimen/x88"
        android:layout_marginLeft="@dimen/x30"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88" />
</RelativeLayout>
