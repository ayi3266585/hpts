<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_lightgray">


    <TextView
        android:id="@+id/title"
        style="@style/title_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:background="@color/base_somber"
        android:gravity="center"
        android:text="我" />

    <TextView
        android:id="@+id/message"
        style="@style/title_text"
        android:layout_width="@dimen/x88"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:layout_height="@dimen/x88"
        android:gravity="center"
        android:text="消息" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/third_rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_head"
                android:paddingBottom="@dimen/x20">

                <RelativeLayout
                    android:id="@+id/head_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x20"
                    android:gravity="center_vertical">

                    <com.queqianme.hpt.view.CircleImageView
                        android:id="@+id/fragment_fourth_img"
                        android:layout_width="@dimen/x150"
                        android:layout_height="@dimen/x150"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/head_icon140" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/head_setting"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/x20"
                    android:text="点击登录"
                    android:textColor="@color/text_write"
                    android:textSize="@dimen/font_14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/third_rl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/third_rl1"
                android:layout_marginTop="@dimen/x20"
                android:background="@color/white">

                <TextView
                    android:id="@+id/third_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="我的订单" />

                <LinearLayout
                    android:id="@+id/bill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/third_tv1"
                    android:layout_marginTop="@dimen/x20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/ic_launcher"
                        android:gravity="center"
                        android:text="申请中" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/ic_launcher"
                        android:gravity="center"
                        android:text="还款中" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@mipmap/ic_launcher"
                        android:gravity="center"
                        android:text="放款单" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/third_rl3"
                android:layout_marginTop="@dimen/x20"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/my_invest"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/x44"
                        android:layout_height="@dimen/x44"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:text="我的投资" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/x44"
                        android:layout_height="@dimen/x44"
                        android:layout_marginRight="@dimen/x30"
                        android:src="@mipmap/arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/id_auth"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:layout_marginTop="@dimen/x20"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/x44"
                        android:layout_height="@dimen/x44"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:text="实名认证" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未认证" />

                    <ImageView
                        android:layout_width="@dimen/x44"
                        android:layout_height="@dimen/x44"
                        android:layout_marginRight="@dimen/x30"
                        android:src="@mipmap/arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bank"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:layout_marginTop="@dimen/x5"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/x44"
                        android:layout_height="@dimen/x44"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:text="银行卡" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    </LinearLayout>


                    <ImageView
                        android:layout_width="@dimen/x44"
                        android:layout_height="@dimen/x44"
                        android:layout_marginRight="@dimen/x30"
                        android:src="@mipmap/arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/loan_data"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:layout_marginTop="@dimen/x20"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/x44"
                        android:layout_height="@dimen/x44"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:text="资料认证" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"></LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/x44"
                        android:layout_height="@dimen/x44"
                        android:layout_marginRight="@dimen/x30"
                        android:src="@mipmap/arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setting"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:layout_marginTop="@dimen/x20"
                    android:background="@color/white"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/x44"
                        android:layout_height="@dimen/x44"
                        android:layout_marginLeft="@dimen/x30"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:text="关于SL" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    </LinearLayout>


                    <ImageView
                        android:layout_width="@dimen/x44"
                        android:layout_height="@dimen/x44"
                        android:layout_marginRight="@dimen/x30"
                        android:src="@mipmap/arrow_right" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>