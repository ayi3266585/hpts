<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hpt="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_lightgray"
    android:orientation="vertical"
    tools:context="com.queqianme.hpt.ui.activity.BillActivity">

    <com.queqianme.hpt.view.TitleBackView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        hpt:titleText="账单详情" />

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:layout_below="@id/title"
        android:background="@color/white"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="账单信息"
            android:textColor="@color/text_blue" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/line_lightgray" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="借款人信息" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/btns"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_height="match_parent"/>


</LinearLayout>
