<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_lightgray"
    tools:context="com.queqianme.hpt.ui.activity.GetCompanyActivity">

    <com.queqianme.hpt.view.TitleBackView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88" />

    <TextView
        android:id="@+id/title"
        style="@style/title_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x88"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="企业认证" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/certification_ing"
                style="@style/linear_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x96"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="@dimen/x44"
                    android:layout_height="@dimen/x44"
                    android:layout_marginLeft="@dimen/x30"
                    android:src="@mipmap/certification_ing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="认证审核中, 请稍等"
                    android:textColor="@color/cer_ing" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/certification_lose"
                style="@style/linear_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x96">

                <ImageView
                    android:layout_width="@dimen/x44"
                    android:layout_height="@dimen/x44"
                    android:layout_marginLeft="@dimen/x30"
                    android:src="@mipmap/certification_none" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="认证不通过，请重新认证"
                    android:textColor="@color/text_red" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x70"
                    android:layout_marginRight="@dimen/x30"
                    android:background="@drawable/bg_lose"
                    android:text="重新认证"
                    android:textColor="@color/text_red" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/company_ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/certification_ing"
                android:layout_marginTop="@dimen/x20"
                android:background="@color/text_write"
                android:orientation="vertical">

                <TextView
                    style="@style/lose_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50"
                    android:text="企业名字错误" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/did_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="企业名称" />

                    <EditText
                        style="@style/did_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="公司/企业单位全名" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/x30"
                    android:background="@color/line_lightgray" />

                <TextView
                    style="@style/lose_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50"
                    android:text="无效地址" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/did_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="企业地址" />

                    <EditText
                        style="@style/did_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="公司/企业具体地址" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/x30"
                    android:background="@color/line_lightgray" />

                <TextView
                    style="@style/lose_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50"
                    android:text="注册号无效" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/did_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="工商注册号" />

                    <EditText
                        style="@style/did_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="公司注册号" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/x30"
                    android:background="@color/line_lightgray" />

                <TextView
                    style="@style/lose_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50"
                    android:text="税务登记好不存在" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/did_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="税务登记号" />

                    <EditText
                        style="@style/did_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="税务登记号" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/x30"
                    android:background="@color/line_lightgray" />

                <TextView
                    style="@style/lose_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50"
                    android:text="机构代码无效" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/did_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="组织机构代码" />

                    <EditText
                        style="@style/did_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="机构代码" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_lightgray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x20"
                    android:background="@color/base_lightgray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_lightgray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:background="@color/text_write"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/did_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="联系人姓名" />

                    <EditText
                        style="@style/did_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="企业联系人" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/x30"
                    android:background="@color/line_lightgray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:background="@color/text_write"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/did_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="联系号码" />

                    <EditText
                        style="@style/did_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="联系号码" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/company_ll2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x250"
                android:layout_below="@id/company_ll1"
                android:layout_marginTop="@dimen/x20"
                android:background="@color/text_write"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_lightgray" />

                <TextView
                    style="@style/lose_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50"
                    android:text="营业执照不清晰" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x20"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/did_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="企业营业执照" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(请上传完整清晰的正面照片)"
                        android:textColor="@color/text_hint" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x20"
                    android:layout_marginTop="@dimen/x30">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/permit" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@mipmap/post_picture_bg" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_lightgray" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
