<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hpt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_lightgray"
    tools:context="com.queqianme.hpt.ui.activity.SettingAboutActivity">

    <com.queqianme.hpt.view.TitleBackView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        hpt:titleText="关于我们" />

    <ImageView
        android:id="@+id/head_img"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x200"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x50"
        android:src="@mipmap/ic_launcher" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_img"
        android:layout_marginTop="@dimen/x30"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearVersion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:background="@color/text_write"
            android:gravity="center_vertical">

            <TextView
                style="@style/text_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:text="版本" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/version"
                style="@style/text_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V1.0" />

            <ImageView
                android:layout_width="@dimen/x44"
                android:layout_height="@dimen/x44"
                android:layout_marginRight="@dimen/x30"
                android:src="@mipmap/arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/text_write"
            android:gravity="center_vertical">

            <TextView
                style="@style/text_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:text="官方QQ" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                style="@style/text_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345678" />

            <ImageView
                android:layout_width="@dimen/x44"
                android:layout_height="@dimen/x44"
                android:layout_marginRight="@dimen/x30"
                android:src="@mipmap/arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70"
            android:layout_marginTop="@dimen/x5"
            android:background="@color/text_write"
            android:gravity="center_vertical">

            <TextView
                style="@style/text_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:text="客服电话" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tell_phone"
                style="@style/text_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_blue"
                android:layout_marginRight="@dimen/x50"
                android:text="020-11111111" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:background="@color/text_write">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/text_lightgray"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:text="客服工作时间:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_height="wrap_content"
                android:textColor="@color/text_lightgray"
                android:layout_marginRight="@dimen/x50"
                android:text="9:00-21:00" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
