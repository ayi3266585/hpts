                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x30">

                <TextView
                    style="@style/text_666"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="详细地址" />

                <com.queqianme.hpt.view.EditTextWithDel
                    style="@style/did_edit_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5" />

                <ImageView
                    android:layout_width="@dimen/x44"
                    android:layout_height="@dimen/x44"
                    android:layout_marginRight="@dimen/x30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x30"
                android:background="@color/line_lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x30">

                <TextView
                    style="@style/text_666"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="公司电话" />

                <TextView
                    style="@style/did_edit_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5" />

                <ImageView
                    android:layout_width="@dimen/x44"
                    android:layout_height="@dimen/x44"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/base_lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x30">

                <TextView
                    style="@style/text_666"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="部门" />

                <TextView
                    style="@style/did_edit_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5" />

                <ImageView
                    android:layout_width="@dimen/x44"
                    android:layout_height="@dimen/x44"
                    android:layout_marginRight="@dimen/x30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x30"
                android:background="@color/line_lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x30">

                <TextView
                    style="@style/text_666"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="职位" />

                <TextView
                    style="@style/did_edit_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5" />

                <ImageView
                    android:layout_width="@dimen/x44"
                    android:layout_height="@dimen/x44"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x30"
                android:background="@color/line_lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x30">

                <TextView
                    style="@style/text_666"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="入职时间" />

                <TextView
                    style="@style/did_edit_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5" />

                <ImageView
                    android:layout_width="@dimen/x44"
                    android:layout_height="@dimen/x44"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x30"
                android:background="@color/line_lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x30">

                <TextView
                    style="@style/text_666"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="每月收入" />

                <TextView
                    style="@style/did_edit_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5" />

                <ImageView
                    android:layout_width="@dimen/x44"
                    android:layout_height="@dimen/x44"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@mipmap/arrow_right" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base_lightgray">

                <Button
                    android:id="@+id/publish_school_company_submit"
                    style="@style/submit_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:layout_below="@id/publish_person_scroll"
                    android:layout_marginBottom="@dimen/x20"
                    android:layout_marginTop="@dimen/x38"
                    android:enabled="false"
                    android:text="下一步" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
