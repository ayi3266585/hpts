<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/x178"
        android:background="@color/text_write">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_lightgray"
            android:layout_alignParentTop="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_lightgray"
            android:layout_alignParentBottom="true"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/line_lightgray"
            android:layout_alignParentLeft="true"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/line_lightgray"
            android:layout_alignParentRight="true"/>


        <ImageView
            android:id="@+id/my_shop_gridview_icon"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/my_shop_gridview_name"
            style="@style/text_333"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_shop_gridview_icon"
            android:layout_centerHorizontal="true"
            android:text="名称" />
    </RelativeLayout>
</FrameLayout>
