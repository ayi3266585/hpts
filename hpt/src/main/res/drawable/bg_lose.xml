<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/text_red" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners android:radius="3dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item>
        <shape>
            <solid android:color="#ffffff" />

            <corners android:radius="3dp" />
        </shape>
    </item>

</layer-list>